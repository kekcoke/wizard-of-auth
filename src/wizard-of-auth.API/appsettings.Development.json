{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "wizard0f_auth.API": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlConnection":   "Server=localhost;Database=wizard-of-auth-sql;UserId=sa;Password=Your_password123;",
    "DefaultConnection": "Host=localhost;Database=wizard-of-auth-postgres;Username=authuser;Password=yourpassword",
    "Redis": "localhost:6379"
  },
  "Server": {
    "BaseUrl": "https://localhost:5001",
    "Issuer": "{{INSERT_ISSUER_HERE}}"
  },
  "Protocols": {
    "OAuth2": {
      "Enable": true,
      "AuthCodeLifeTime": 600,
      "RefreshTokenLifeTime": 1209600,
      "SupportedGrantTypes": [
        "authorization_code",
        "client_credentials",
        "refresh_token",
        "password",
        "implicit",
        "urn:ietf:params:oauth:grant-type:device_code"
      ]
    },
    "OIDC": {
      "Enable": true,
      "SupportedScopes": [
        "openid",
        "profile",
        "email",
        "address",
        "phone"
      ],
      "IdTokenLifeTime": 3600
    },
    "SAML": {
      "Enable": false,
      "MetadataUrl": "https://example.com/saml/metadata",
      "EntityId": "{{your-entity-id}}",
      "AssertionConsumerServiceUrl": "https://localhost:5001/saml/acs",
      "SingleLogoutServiceUrl": "https://localhost:5001/saml/slo"
    }
  },
  "Security": {
    "PasswordPolicy": {
      "MinLength": 16,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecialCharacter": true
    },
    "MFA": {
      "Enable": true,
      "Methods": [
        "AuthenticatorApp",
        "sms",
        "email",
        "totp"
      ],
      "RememberDeviceDays": 14
    },
    "RateLimiting": {
      "Enable": true,
      "RequestsPerMinute": 100,
      "Login": {
        "MaxAttempts": 5,
        "WindowMinutes": 15
      },
      "Registration": {
        "MaxAttempts": 3,
        "WindowMinutes": 60
      },
      "TokenRefresh": {
        "MaxAttempts": 10,
        "WindowMinutes": 1
      }
    },
    "AccountLocking": {
      "Enabled": true,
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 30
    },
    "AnomalyDetection": {
      "Enabled": true,
      "MonitorIpChanges": true,
      "MonitorDeviceChanges": true
    }
  },
  "Certificates": {
    "AutoGenerate": true,
    "UseDevelopmentCertificates": true,
    "DevelopmentSigningCertificatePath": "certs/dev_signing_cert.pfx",
    "SigningCertificatePath": "certs/signing_cert.pfx",
    "SigningCertificatePassword": "your_cert_password",
    "EncryptionCertificatePath": "certs/encryption_cert.pfx",
    "EncryptionCertificatePassword": "your_cert_password",
    "RotationDays": 90,
    "KeyAlgorithm": "RSA",
    "KeySize": 4096,
    "SigningAlgorithm": "RS256",
    "StorePath": ".certs/"
  },
  "Connectors": [
    {
      "Type": "Database",
      "Enabled": true,
      "Priority": 1
    },
    {
      "Type": "LDAP",
      "Enabled": false,
      "Priority": 2,
      "Config": {
        "Server": "ldap://localhost:389",
        "BaseDN": "dc=example,dc=com",
        "BindDN": "cn=admin,dc=example,dc=com",
        "BindPassword": "admin",
        "UserSearchBase": "ou=users",
        "UserSearchFilter": "(uid={0})",
        "SyncIntervalMinutes": 60
      }
    },
    {
      "Type": "AzureAD",
      "Enabled": false,
      "Priority": 3,
      "Config": {
        "TenantId": "",
        "ClientId": "",
        "ClientSecret": ""
      }
    }
  ],
  "Email": {
    "Provider": "SMTP",
    "From": "noreply@example.com",
    "FromName": "Auth Server",
    "SMTP": {
      "Host": "localhost",
      "Port": 1025,
      "EnableSsl": false,
      "Username": "",
      "Password": ""
    }
  },
  "SMS": {
    "Provider": "Twilio",
    "Twilio": {
      "AccountSid": "",
      "AuthToken": "",
      "FromNumber": ""
    }
  },
  "Monitoring": {
    "EnableMetrics": true,
    "EnableHealthChecks": true,
    "EnableAuditLogging": true
  }
}
